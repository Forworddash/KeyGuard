{
    "manifest_version": 3,
    "name": "Password Manager",
    "version": "1.0",
    "description": "A simple password manager",
    "permissions": [
      "storage",
      "activeTab",
      "tabs"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon48.png",
        "48": "icons/icon48.png",
        "128": "icons/icon48.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  